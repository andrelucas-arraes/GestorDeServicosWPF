<Window x:Class="GestaoAulas.Views.ConfiguracoesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Configurações"
        Height="500" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Background="#0a0b10" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="24,20">
            <TextBlock Text="Configurações"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Conteúdo -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel>
                
                <!-- Seção: Valor da Hora-Aula -->
                <Border Margin="0,0,0,20" Padding="16" Background="#111827" BorderBrush="#334155" BorderThickness="1" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Valor da Hora-Aula"
                                   FontWeight="Bold"
                                   Foreground="#94a3b8"
                                   FontSize="14"
                                   Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="R$" 
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       FontSize="16"/>
                            <TextBox x:Name="txtValorHora"
                                     Width="140"
                                     Text="50,00"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Foreground="White"
                                     BorderBrush="#334155"
                                     Height="50"
                                     VerticalContentAlignment="Center"
                                     materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                     MaxLength="10"
                                     PreviewTextInput="ValorHora_PreviewTextInput"
                                     PreviewKeyDown="ValorHora_PreviewKeyDown"/>
                            <TextBlock Text="por hora"
                                       VerticalAlignment="Center"
                                       Foreground="#94a3b8"
                                       Margin="12,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Seção: Backup -->
                <Border Margin="0,0,0,20" Padding="16" Background="#111827" BorderBrush="#334155" BorderThickness="1" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Backup de Dados"
                                   FontWeight="Bold"
                                   Foreground="#94a3b8"
                                   FontSize="14"
                                   Margin="0,0,0,16"/>

                        <!-- Info do banco -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock x:Name="txtInfoBanco"
                                       Text="Banco de dados: --"
                                       Foreground="#cbd5e1"/>
                            <TextBlock x:Name="txtUltimoBackup"
                                       Text="Último backup: --"
                                       Foreground="#cbd5e1"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Botões de backup -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Fazer Backup Agora"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="White"
                                    BorderBrush="#3b82f6"
                                    Height="40"
                                    Click="FazerBackup_Click"
                                    Margin="0,0,12,0"/>
                            <Button Content="Restaurar Backup"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="#f8fafc"
                                    BorderBrush="#475569"
                                    Height="40"
                                    Click="RestaurarBackup_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Seção: Backup Externo -->
                <Border Margin="0,0,0,20" Padding="16" Background="#111827" BorderBrush="#334155" BorderThickness="1" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Backup Externo / Nuvem"
                                   FontWeight="Bold"
                                   Foreground="#94a3b8"
                                   FontSize="14"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="Configure uma pasta sincronizada (OneDrive, Google Drive, Dropbox) para backup automático."
                                   TextWrapping="Wrap"
                                   Foreground="#94a3b8"
                                   FontSize="12"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtCaminhoExterno"
                                     Grid.Column="0"
                                     IsReadOnly="True"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Foreground="White"
                                     BorderBrush="#334155"
                                     materialDesign:HintAssist.Hint="Caminho da pasta"/>
                            
                            <Button Grid.Column="1"
                                    Content="Selecionar"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Foreground="White"
                                    BorderBrush="#334155"
                                    Click="SelecionarPastaExterna_Click"
                                    Margin="12,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Seção: Sobre -->
                <Border Padding="16" Background="#111827" BorderBrush="#334155" BorderThickness="1" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Sobre"
                                   FontWeight="Bold"
                                   Foreground="#94a3b8"
                                   FontSize="14"
                                   Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Gestor de Serviços"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Versão 2.0.0 (WPF)"
                                   Foreground="#94a3b8"/>
                        <TextBlock Text="Desenvolvido em C# / .NET 8"
                                   Foreground="#94a3b8"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Botões -->
        <Border Grid.Row="2" BorderBrush="#334155" BorderThickness="0,1,0,0" Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="White"
                        BorderBrush="#475569"
                        Click="Cancelar_Click"
                        Margin="0,0,12,0"
                        Width="110"/>
                <Button Content="Salvar Configurações" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Background="#3b82f6"
                        Foreground="White"
                        Click="Salvar_Click"
                        Width="180"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Window x:Class="GestaoAulas.Views.ExportarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Exportar Dados"
        Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Exportar Dados"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,24"/>

        <!-- Opções -->
        <StackPanel Grid.Row="1">
            
            <!-- Info -->
            <TextBlock x:Name="txtInfo"
                       Text="Exportar 0 aulas do período selecionado"
                       Opacity="0.8"
                       Margin="0,0,0,20"/>
            
            <!-- Formato -->
            <TextBlock Text="Formato de exportação:"
                       Opacity="0.6"
                       Margin="0,0,0,8"/>
            
            <StackPanel>
                <RadioButton x:Name="rbExcel" 
                             Content="Excel (.xlsx) - Recomendado"
                             IsChecked="True"
                             Style="{StaticResource MaterialDesignRadioButton}"
                             Margin="0,0,0,8"/>
                <RadioButton x:Name="rbCsv" 
                             Content="CSV (.csv) - Compatível com qualquer programa"
                             Style="{StaticResource MaterialDesignRadioButton}"/>
            </StackPanel>

            <!-- Destino -->
            <TextBlock Text="Local de salvamento:"
                       Opacity="0.6"
                       Margin="0,20,0,8"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtCaminho"
                         Grid.Column="0"
                         IsReadOnly="True"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Caminho do arquivo"/>
                
                <Button Grid.Column="1"
                        Content="Procurar"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="Procurar_Click"
                        Margin="8,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
            <Button Content="Cancelar" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="Cancelar_Click"
                    Margin="0,0,8,0"
                    Width="100"/>
            <Button x:Name="btnExportar"
                    Content="Exportar" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="Exportar_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
